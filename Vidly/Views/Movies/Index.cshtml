@model System.Collections.Generic.List<Vidly.Models.Movie>

<h2>Movies</h2>
<p>
 @Html.ActionLink("New Movie", "New", "Movies", new { @class = "btn btn-primary" })
</p>

@if (Model == null || Model.Count == 0)
{
    <text>We don't have any movie yet.</text>
}
else
{
    <table class="table  table-bordered">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(movie.Name, "Edit", new {id = movie.Id})

                    </td>
                    <th>@movie.Genre.Name</th>
                </tr>
            }

        </tbody>
    </table>
}